<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <!-- Tiêu đề -->
    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hóa đơn thanh toán"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TextView thông báo trạng thái -->

            <!-- Layout hóa đơn -->
            <TextView
                android:id="@+id/tvThongBao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:padding="32dp"
                android:text="Đang kiểm tra thông tin xe..."
                android:textAlignment="center"
                android:textColor="#666666"
                android:textSize="16sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/invoiceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- Thông tin xe -->
                <TextView
                    android:id="@+id/tvBienSoXe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="#E3F2FD"
                    android:padding="15dp"
                    android:text="🚗 Biển số xe: 29A-12345"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="🚗 Biển số xe: 30L-22222" />

                <TextView
                    android:id="@+id/tvThoiGianVao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:drawablePadding="8dp"
                    android:padding="12dp"
                    android:text="⏰ Thời gian vào: 08:00 28/07/2025"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    tools:text="⏰ Thời gian vào: 07:32 31/07/2025" />

                <TextView
                    android:id="@+id/tvThoiGianRa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:drawablePadding="8dp"
                    android:padding="12dp"
                    android:text="🚪 Thời gian ra: 10:00 28/07/2025"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    tools:text="🚪 Thời gian ra: 08:32 31/07/2025" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="#E0E0E0" />

                <!-- Giá vé -->
                <TextView
                    android:id="@+id/tvGiaVe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="#FFEBEE"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="💰 Giá vé: 20.000đ"
                    android:textColor="#D32F2F"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="💰 Giá vé: 3.000đ" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="#E0E0E0" />

                <!-- Hình thức thanh toán -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:text="Hình thức thanh toán:"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgPaymentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <RadioButton
                        android:id="@+id/rbTienMat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:padding="12dp"
                        android:text="💵 Tiền mặt"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rbChuyenKhoan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="💳 Chuyển khoản"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <!-- Nút thanh toán & in hóa đơn -->
            <Button
                android:id="@+id/printButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:enabled="false"
                android:minHeight="60dp"
                android:text="💰 Thanh toán &amp; In hóa đơn"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"
                tools:enabled="true" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>